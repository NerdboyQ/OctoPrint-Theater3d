            <td width=100px align="center">                
                <button class="btn_swap_servos" data-bind="click:swap_servos">Swap Servos</button>
            </td>
            <td width=100px align="center">
            <button class="btn_reset_servos" data-bind="click:reset_servos">Reset Servos</button>
