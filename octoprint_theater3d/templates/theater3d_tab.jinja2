<div style="padding:20px;">
    <h1 align="center">3D Theater</h1>
    
    <table align="center">
        <tr>
        	<td width=50px align="center"></td>
            <td width=50px align="center"><button class="btn tilt-up" data-bind="click:tilt_camera_u">Tilt Up</button></td>
	    <td width=50px></td>
		</tr>
		<tr>
